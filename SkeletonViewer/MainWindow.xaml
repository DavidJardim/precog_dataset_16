<Window x:Class="SkeletonViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Skeleton Viewer" Height="330" Width="525">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Name="labelSequenceName">None</Label>
            <Border Background="Black">
                <Grid ClipToBounds="True" VerticalAlignment="Top">
                    <Image x:Name="KinectCanvas" Width="320" Height="240"/>
                </Grid>
            </Border>
            <StackPanel Orientation="Horizontal">
                <Button Content="Browse File" Margin="5" Width="75" x:Name="ButtonSelectFile" Click="ButtonSelectFile_Click"/>
                <Button Content="Play" Margin="5" Width="75" x:Name="ButtonPlay" Click="ButtonPlay_Click"/>
                <Button Content="Stop" Margin="5" Width="75" x:Name="ButtonStop" Click="ButtonStop_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
